{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "outDir": "./compiled",
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ES2016"
  },
  "exclude": [
    "node_modules"
  ]
}